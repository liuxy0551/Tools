  @import "../../styles/base";

  .feedback-box {
    padding: 40rpx;
    .feedback-text {
      border-radius: 10rpx;
      background-color: #ffffff;
      .text-area-box {
        padding: 40rpx 40rpx;
        width: 590rpx;
        height: 360rpx !important;
        line-height: 35rpx;
      }
      .text-area-num {
        font-size: 26rpx;
