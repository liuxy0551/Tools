</style>

<template>
  <view class="feedback-box">
    <view class="feedback-text">
      <textarea class="text-area-box" maxlength="200" auto-height placeholder="留下你的建议呗" auto-focus="true" bindinput="bindText"/>
      <view class="text-area-num">{{cursor}}/200</view>
    </view>
    <view class="feedback-input">
      <input bindinput="bindInput" placeholder="留下你的邮箱呗"/>
    </view>
    <view class="submit-btn" bindtap="submit">提交</view>
  </view>
</template>

<script>
  import wepy from 'wepy';

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '意见反馈'
    };
    components = {};
    data = {
      feedback: "",             // 建议
      cursor: "0",              // 建议框输入的字数
      contact: "",              // 联系方式 - 邮箱优先
    };
    computed = {};
    methods = {
      // 当键盘输入时，触发 input 事件 - textarea
      bindText(e) {
        this.feedback = e.detail.value;
        this.cursor = e.detail.cursor;
      },
      // 当键盘输入时，触发 input 事件 - input
      bindInput(e) {
        this.contact = e.detail.value;
      },
      // 提交建议和邮箱
      submit() {
        console.log(this.feedback, this.contact);
        wx.showToast({ title: '敬请期待', icon: 'none', duration: 2000 });
      }
    };
    onLoad() {

    }
  }
</script>

